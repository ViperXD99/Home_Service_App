<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activities.BookNow">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:icon="@drawable/ic_fluent_arrow_left_24_regular"
                app:iconSize="30dp"
                app:iconTint="@color/primary_color"
                tools:ignore="SpeakableTextPresentCheck" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Now"
                tools:ignore="HardcodedText"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sp_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:src="@color/primary_color"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        tools:ignore="ImageContrastCheck" />

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="-70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenn Wilson"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_fluent_star_half_24_filled__1_"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <TextView
            android:id="@+id/sp_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="4.8"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:text="@string/line"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sp_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="54 Reviews"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <TextView
        android:id="@+id/sp_serviceName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="1dp"
        android:text="Cleaning"
        android:textColor="@color/teal"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <LinearLayout
        android:id="@+id/lay3"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_fluent_location_24_regular"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/sp_address"
            android:layout_width="203dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:text="19/B, Kollupitiya, Colombo 03"
            android:textSize="14sp"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/call_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_fluent_call_24_regular"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/msg_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_fluent_chat_24_teal"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="99dp"
            android:layout_height="20dp"
            android:layout_margin="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:text="@string/select_a_date"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/date_edit_txt"
            style="?android:dropDownSpinnerStyle"
            android:layout_width="259dp"
            android:layout_height="match_parent"
            android:hint="@string/_22_jul_2023"
            android:onClick="openDatePicker"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center"
            android:textColorHint="#757575">
        </com.google.android.material.textfield.TextInputEditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="99dp"
            android:layout_height="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="25dp"
            android:text="@string/rate"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rate_edit_txt"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Rs.1500/Day"
            android:minHeight="48dp"
            android:onClick="openDatePicker"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColorHint="#757575"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <TextView
        android:layout_width="99dp"
        android:layout_height="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="@string/your_address"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck" />

    <androidx.cardview.widget.CardView
        android:layout_width="377dp"
        android:layout_height="110dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="-20dp"
        android:elevation="8dp">

        <TextView
            android:id="@+id/change_address_txt"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="310dp"
            android:text="@string/change"
            android:textColor="@color/teal"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ic_fluent_location_24_regular"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/full_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:text="Full Name"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tel_number_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:layout_marginTop="30dp"
            android:text="Tel Number"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/address_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:layout_marginTop="50dp"
            android:text="Address"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/zone_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:layout_marginTop="70dp"
            android:text="Zone"
            tools:ignore="HardcodedText" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="99dp"
        android:layout_height="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="@string/description"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="381dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="-20dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-10dp"
        android:text="@string/book_now"
        tools:ignore="TouchTargetSizeCheck" />


</LinearLayout>